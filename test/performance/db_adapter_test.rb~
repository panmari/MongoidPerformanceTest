  def test_mongoid_read
    1000.times do
    	assert_equal('Jack Sparrow', Person.find(2).name)
    end
  end
  
  def test_mongo_read
    1000.times do
    	assert_equal('Jack Sparrow', @coll.find_one(_id: 2)["name"])
    end
  end
  
